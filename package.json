{
  "name": "twitch-translate-bot",
  "version": "1.0.0",
  "description": "Twitch Translate Bot - Desktop Application",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "clean": "rimraf dist node_modules package-lock.json",
    "rebuild": "npm run clean && npm install && npm run build",
    "lint": "echo 'No linter configured'",
    "test": "echo 'No tests configured'"
  },
  "keywords": [
    "twitch",
    "bot",
    "translation",
    "electron",
    "desktop"
  ],
  "author": "Twitch Translate Bot Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "dependencies": {
    "tmi.js": "^1.8.5",
    "google-translate-api-x": "^10.7.0",
    "dotenv": "^16.3.1"
  },
  "build": {
    "appId": "com.twitchtranslatebot.app",
    "productName": "Twitch Translate Bot",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.log"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
